<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graytransparent"
    tools:context=".shoppingSiteFragment" >

    <ImageButton
        android:id="@+id/amazonbutton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:scaleType="fitCenter"
        android:src="@drawable/amazon_logo"
        app:layout_constraintBottom_toTopOf="@+id/rakutenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rakutenButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:scaleType="fitCenter"
        android:src="@drawable/rakuten_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yahooButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:scaleType="fitCenter"
        android:src="@drawable/yahooshopping_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rakutenButton" />
</androidx.constraintlayout.widget.ConstraintLayout>